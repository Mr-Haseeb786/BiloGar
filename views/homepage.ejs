<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/styles/styles.css" />
    <title>HomePage</title>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <div class="mt-3 allBlogs-container">
      <% if (locals.blogs) { %> <% blogs.forEach(blog => { %>
      <div
        class="card"
        style="
          max-width: 24rem;
          box-shadow: 2px 2px 10px black;
          height: max-content;
        "
      >
        <img
          src="<%= blog.coverImageURL %>"
          class="card-img-top"
          style="max-height: 400px; object-fit: cover"
        />
        <div
          class="card-body d-flex flex-column-2 justify-content-between align-items-center"
        >
          <h5 class="card-title" style="margin-right: 1rem">
            <%= blog.title %>
          </h5>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary">
            Read about it
          </a>
        </div>
      </div>
      <% }) %> <% } else { %> <% } %>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
